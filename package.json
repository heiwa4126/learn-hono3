{
	"name": "hono3",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"format": "biome format --write .",
		"format:full": "pnpm pkg fix && biome format --write . && dprint fmt && textlint --fix \"**/*.md\"",
		"lint": "biome lint .",
		"check": "biome check --apply .",
		"build": "bun build ./src/index.ts --minify --outfile ./dist/hono3.js",
		"start": "bun run ./dist/hono3.js",
		"compile": "bun build --compile ./src/index.ts --outfile ./dist/hono3",
		"ex8": "curl -X POST -H \"Content-Type: application/x-www-form-urlencoded\" -d \"title=hello&body=goodbye\" localhost:3000/rpc/posts"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.6",
		"hono": "^4.12.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@types/bun": "^1.3.9"
	},
	"version": ""
}
